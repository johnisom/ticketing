<h1>Log In</h1>

<%= form_with url: login_path, method: :post, local: true do %>
  <div class="field">
    <%= label_tag :email_address %>
    <%= text_field_tag :email_address %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag 'Log In' %>
  </div>
<% end %>

<%= link_to 'Back', root_path %>
