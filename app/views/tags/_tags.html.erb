<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tickets</th>
      <% if logged_in? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @tags_counts.each do |tag_counts| %>
      <tr>
        <td><%= tag_counts['name'] %></td>
        <td align="center">
          <%= link_to tag_counts['count'],
                      controller: 'tickets',
                      action: 'index',
                      tag_id: tag_counts['id'] %>
        </td>
        <% if logged_in? %>
          <td><%= link_to 'Edit', edit_tag_path(id: tag_counts['id']) %></td>
          <td><%= link_to 'Destroy',
                          tag_path(id: tag_counts['id']),
                          method: :delete,
                          data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
